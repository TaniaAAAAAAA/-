//---------------------------------------------------------------------------

#include <vcl.h>
#include <math.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button1Click(TObject *Sender)
{
float x, y, a, b, c;
x = StrToFloat(Edit1->Text);
int k, n = StrToInt(Edit2->Text);
Memo1->Clear();
Memo1->Lines->Add("–езультати:");
switch (n)
{ case 1: { a=-3.7; b=5.6; c=exp(cos(x)); break;}
case 2: { a=0.81; b=-2.4; c=tan(fabs(b*x)); break;}
case 3: { a=2.5; b=0.6; c=1/tan(fabs(b*x)); break;}
default:{ Memo1->Clear();
ShowMessage("¬вед≥ть номер 1, 2 чи 3"); return; }
}
if(x<a) { y=sin(exp(fabs(a+c)))+pow(x,2+b); k=1;}
if(x>=a && x<b) { y=pow(a+fabs(5.3*b),1./3)+c; k=2;}
if(x>=b) { y=pow(cos(a+b),2)+sin(x*x); k=3;}
Memo1->Lines->Add(IntToStr(n)+"-й вар≥ант: y=" +
FloatToStr(y)+" умова є"+IntToStr(k));

}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button2Click(TObject *Sender)
{
Edit1->Clear();
Edit2->Clear();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button3Click(TObject *Sender)
{
Close();        
}
//---------------------------------------------------------------------------
